{{#if userInSession}}

<h2>Create a property</h2>
<div class="row">
  <div class="col-md-6">
    <form action="/property/create" method="post" enctype="multipart/form-data"> {{!-- !!! --}}
      <div class="form-group">
        <label>Title:
          <input type="text" name="title" class="form-control" />
        </label>
      </div>
 
      <div class="form-group">
        <label>Description:
          <textarea name="description" cols="30" rows="4" class="form-control"> </textarea>
        </label>
      </div>
 
      <div class="form-group">
        <label>Image:
          <input type="file" name="property-cover-image" class="form-control-file" />
        </label>
      </div>
 
      <button type="submit" class="btn btn-primary">Create</button>
    </form>
  </div>
</div>
{{else}}
    <p>You need to login</p>
  <hr />
{{/if}}